{
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "esnext",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2017", "DOM"],
    "sourceMap": true,
    "removeComments": true
  },
  "exclude": ["**/*.d.ts", "typings/**/*", "node_modules"]
}
